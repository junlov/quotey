<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Quote {{ quote.id }}</title>
  <style>
    /* Compact template - minimal, email-friendly */
    
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    :root {
      --primary-color: {{ primary_color | default(value="#2563eb") }};
      --text-primary: #1f2937;
      --text-secondary: #6b7280;
      --border-color: #e5e7eb;
      --bg-light: #f9fafb;
      --font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
      --font-mono: "SF Mono", Monaco, monospace;
    }
    
    @page {
      size: A4;
      margin: 24px;
    }
    
    body {
      font-family: var(--font-family);
      font-size: 10pt;
      line-height: 1.4;
      color: var(--text-primary);
    }
    
    /* Minimal header */
    .compact-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 16px;
      padding-bottom: 12px;
      border-bottom: 1px solid var(--primary-color);
    }
    
    .compact-brand {
      font-size: 14pt;
      font-weight: 700;
      color: var(--primary-color);
    }
    
    .compact-meta {
      text-align: right;
    }
    
    .compact-id {
      font-size: 11pt;
      font-weight: 700;
    }
    
    .compact-date {
      font-size: 8pt;
      color: var(--text-secondary);
    }
    
    /* Customer block */
    .compact-customer {
      margin-bottom: 16px;
    }
    
    .compact-customer h2 {
      font-size: 8pt;
      color: var(--text-secondary);
      text-transform: uppercase;
      letter-spacing: 0.5px;
      margin-bottom: 4px;
    }
    
    .compact-customer .name {
      font-size: 11pt;
      font-weight: 600;
    }
    
    /* Compact table */
    .compact-table {
      width: 100%;
      border-collapse: collapse;
      font-size: 9pt;
      margin-bottom: 16px;
    }
    
    .compact-table th {
      background: var(--bg-light);
      padding: 8px;
      text-align: left;
      font-weight: 600;
      color: var(--text-secondary);
      font-size: 8pt;
      text-transform: uppercase;
      border-bottom: 1px solid var(--border-color);
    }
    
    .compact-table th.numeric {
      text-align: right;
    }
    
    .compact-table td {
      padding: 6px 8px;
      border-bottom: 1px solid var(--border-color);
    }
    
    .compact-table td.numeric {
      text-align: right;
      font-family: var(--font-mono);
    }
    
    .compact-product {
      font-weight: 500;
    }
    
    .compact-qty {
      color: var(--text-secondary);
    }
    
    /* Compact totals */
    .compact-totals {
      margin-left: auto;
      width: 220px;
    }
    
    .compact-totals table {
      width: 100%;
      font-size: 9pt;
    }
    
    .compact-totals td {
      padding: 4px 0;
    }
    
    .compact-totals td:first-child {
      color: var(--text-secondary);
    }
    
    .compact-totals td:last-child {
      text-align: right;
      font-family: var(--font-mono);
    }
    
    .compact-totals .total-row {
      font-size: 12pt;
      font-weight: 700;
      color: var(--primary-color);
      border-top: 1px solid var(--primary-color);
    }
    
    .compact-totals .total-row td {
      padding-top: 8px;
    }
    
    /* Compact footer */
    .compact-footer {
      margin-top: 24px;
      padding-top: 12px;
      border-top: 1px solid var(--border-color);
      font-size: 8pt;
      color: var(--text-secondary);
      text-align: center;
    }
    
    /* One page optimization */
    @media print {
      body {
        max-height: 100vh;
        overflow: hidden;
      }
      
      .compact-table {
        font-size: 8pt;
      }
      
      .compact-table td {
        padding: 4px 8px;
      }
    }
  </style>
</head>
<body>
  <!-- Header -->
  <header class="compact-header">
    <div class="compact-brand">{{ company_name | default(value="Quotey") }}</div>
    <div class="compact-meta">
      <div class="compact-id">{{ quote.id }}</div>
      <div class="compact-date">{{ quote.created_at | date(format="%b %d, %Y") }}</div>
    </div>
  </header>

  <!-- Customer -->
  <section class="compact-customer">
    <h2>Quote For</h2>
    <div class="name">{{ account.name }}</div>
    {% if quote.valid_until %}
    <div style="font-size: 8pt; color: var(--text-secondary);">Valid until {{ quote.valid_until | date(format="%b %d, %Y") }}</div>
    {% endif %}
  </section>

  <!-- Line Items -->
  <table class="compact-table">
    <thead>
      <tr>
        <th>Item</th>
        <th class="numeric">Qty</th>
        <th class="numeric">Price</th>
        <th class="numeric">Total</th>
      </tr>
    </thead>
    <tbody>
      {% for line in lines %}
      <tr>
        <td>
          <div class="compact-product">{{ line.product_name }}</div>
        </td>
        <td class="numeric compact-qty">{{ line.quantity }}</td>
        <td class="numeric">{{ quote.currency | default(value="$") }}{{ "%.2f" | format(line.unit_price | default(value=0)) }}</td>
        <td class="numeric">{{ quote.currency | default(value="$") }}{{ "%.2f" | format(line.subtotal | default(value=0)) }}</td>
      </tr>
      {% endfor %}
    </tbody>
  </table>

  <!-- Totals -->
  <section class="compact-totals">
    <table>
      <tr>
        <td>Subtotal</td>
        <td>{{ quote.currency | default(value="$") }}{{ "%.2f" | format(pricing.subtotal) }}</td>
      </tr>
      {% if pricing.discount_total and pricing.discount_total > 0 %}
      <tr>
        <td>Discount</td>
        <td>-{{ quote.currency | default(value="$") }}{{ "%.2f" | format(pricing.discount_total) }}</td>
      </tr>
      {% endif %}
      {% if pricing.tax_total and pricing.tax_total > 0 %}
      <tr>
        <td>Tax</td>
        <td>{{ quote.currency | default(value="$") }}{{ "%.2f" | format(pricing.tax_total) }}</td>
      </tr>
      {% endif %}
      <tr class="total-row">
        <td>Total</td>
        <td>{{ quote.currency | default(value="$") }}{{ "%.2f" | format(pricing.total) }}</td>
      </tr>
    </table>
  </section>

  <!-- Footer -->
  <footer class="compact-footer">
    <p>Questions? Contact {{ sales_rep.name | default(value="us") }} at {{ sales_rep.email | default(value="sales@example.com") }}</p>
    {% if not white_label %}
    <p style="margin-top: 4px;">Generated by Quotey</p>
    {% endif %}
  </footer>
</body>
</html>
